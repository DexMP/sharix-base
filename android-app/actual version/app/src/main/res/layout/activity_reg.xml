<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogAndReg.RegActivity"
android:background="@drawable/bck_mb">
    <EditText
            android:id="@+id/editTextUsername"
            android:background="@drawable/textlog"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:hint="Enter username"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576" android:layout_marginTop="288dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/iceberg" android:typeface="sans" android:lineSpacingExtra="36sp"
            android:selectAllOnFocus="true" android:textColorHint="#FFFFFF"/>
    <EditText
            android:id="@+id/editTextPassword"
            android:inputType="textPassword"
            android:background="@drawable/textlog"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:hint="Enter Password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576" android:layout_marginTop="360dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/iceberg" android:typeface="sans" android:lineSpacingExtra="36sp"
            android:selectAllOnFocus="true" android:textColorHint="#FFFFFF"/>
    <Button
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:background="@drawable/buttonshape"
            android:layout_height="42dp"
            android:theme="@style/AppTheme.Button"
            android:text="Login User"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
            android:textAllCaps="false"
            app:layout_constraintVertical_bias="0.112"/>
    <TextView
            android:text="@string/text_create_acc"
            android:textColorHint="#FFFFFF"
            android:layout_width="114dp"
            android:layout_height="42dp"
            android:id="@+id/Create_new" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogin" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.909" android:textColor="#FFFFFF" android:textAlignment="viewStart"
            android:textSize="16sp"/>

</android.support.constraint.ConstraintLayout>
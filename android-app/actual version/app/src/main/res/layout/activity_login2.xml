<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogAndReg.LoginAct"
android:background="@drawable/bck_mb">
    <EditText
            android:id="@+id/editTextUsername"
            android:background="@drawable/textlog"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:hint="@string/enter_username"
            android:inputType="" android:autofillHints="" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="188dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/iceberg" android:typeface="sans" android:lineSpacingExtra="36sp"
            android:selectAllOnFocus="true" android:textColorHint="#FFFFFF"
    />
    <EditText
            android:id="@+id/editTextPassword"
            android:textColor="@color/white"
            android:background="@drawable/textlog"
            android:inputType="textPassword"
            android:hint="@string/enter_password"
            android:layout_width="300dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
            android:fontFamily="@font/iceberg" android:typeface="sans" android:lineSpacingExtra="36sp"
            android:textColorHint="#FFFFFF"
            android:selectAllOnFocus="true" android:backgroundTint="@color/white"/>
    <EditText
            android:id="@+id/editTextEmail"
            android:textAlignment="center"
            android:background="@drawable/textlog"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/white"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:textColor="@color/white"
            android:autofillHints="" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/editTextUsername"
            android:layout_marginEnd="8dp" android:fontFamily="@font/iceberg" android:typeface="sans"
            android:lineSpacingExtra="36sp" android:selectAllOnFocus="true"
            android:textColorHint="#FFFFFF"/>
    <TextView
            android:id="@+id/textViewLogin"
            android:textAlignment="textStart"
            android:textColorHint="#FFFFFF"
            android:textColor="@color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="@string/already_registered_nclick_her_to_login"
            android:layout_width="155dp"
            android:layout_height="62dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegister" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:textSize="16sp"/>
    <Button
            android:id="@+id/buttonRegister"
            android:layout_width="wrap_content"
            android:background="@drawable/buttonshape"
            android:layout_height="43dp"
            android:theme="@style/AppTheme.Button"
            android:text="@string/register_user"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            android:textSize="18sp"
            android:textAllCaps="false"/>

</android.support.constraint.ConstraintLayout>